{
  "schemaVersion": 1,
  "id": "minecraft_access",
  "version": "${version}",

  "name": "Minecraft Access",
  "description": "A mod that helps visually impaired players to play Minecraft.",
  "authors": [
    "Shoaib", "Boholder", "TheSuperGamer20578"
  ],
  "contact": {
    "homepage": "https://github.com/khanshoaib3/minecraft-access",
    "sources": "https://github.com/khanshoaib3/minecraft-access",
    "issues": "https://github.com/khanshoaib3/minecraft-access/issues"
  },
  "icon": "logo-mc-access.png",

  "license": "GNU GPLv3",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.khanshoaib3.minecraft_access.fabric.MainClassFabric"
    ],
    "client": [
      "com.github.khanshoaib3.minecraft_access.fabric.MinecraftAccessClient"
    ],
    "modmenu": [
      "com.github.khanshoaib3.minecraft_access.fabric.ModMenu"
    ]
  },
  "mixins": [
    "minecraft_access.mixins.json",
    "minecraft_access-common.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-key-binding-api-v1": "*",
    "fabric-resource-loader-v0": "*",
    "minecraft": "${minecraft_version}"
  },
  "suggests": {
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/yQjjsDqWQX",
        "modmenu.wiki": "https://github.com/khanshoaib3/minecraft-access/tree/1.21/docs",
        "modmenu.github_releases": "https://github.com/khanshoaib3/minecraft-access/releases",
        "modmenu.modrinth": "https://modrinth.com/mod/minecraft-access"
      }
    }
  }
}
